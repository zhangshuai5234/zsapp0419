<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/loginlayout"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffff"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="23dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号登录"
            android:textColor="#000000"
            android:textSize="23dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#dddddd"/>
            <ImageView
                android:id="@+id/username_icon"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_zh"/>
            <TextView
                android:id="@+id/username_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/username_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:text="账号"
                android:textColor="#000000"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/username_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/username_title"
                android:background="@null"
                android:ems="19"
                android:hint="在此输入账户"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#dddddd"/>
            <ImageView
                android:id="@+id/passward_icon"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_mm"/>
            <TextView
                android:id="@+id/passward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/passward_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:text="密码"
                android:textColor="#000000"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/passward_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/passward_title"
                android:background="@null"
                android:ems="19"
                android:inputType="textPassword"
                android:hint="在此输入密码"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/bg_login_bt"/>

</LinearLayout>
