<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broder"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="14dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >


            <View
                android:id="@+id/view_icon"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/green_icon"
                />
            <TextView
                android:id="@+id/peng_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/view_icon"
                android:text="环境监测数据"
                android:textColor="@color/item_graytext3"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/planttime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="2018-08-09  17:05"
                android:textColor="@color/item_graytext4"
                android:textSize="13dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_width="324dp"
            android:layout_height="1dp"
            android:background="#ffe6e6e6"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/gateway1_tv"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="网关1"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/gateway2_tv"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="网关2"
                        android:textColor="@color/item_graytext4"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"

                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/gateway3_tv"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="网关3"
                        android:textColor="@color/item_graytext4"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"

                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/gateway4_tv"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="网关4"
                        android:textColor="@color/item_graytext4"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"

                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/gateway5_tv"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="网关5"
                        android:textColor="@color/item_graytext4"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"

                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/gateway6_tv"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="网关6"
                        android:textColor="@color/item_graytext4"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"

                        android:gravity="center"
                        android:visibility="gone"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/air_temperature_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/air_temperature_icon"/>

                    <TextView
                        android:id="@+id/air_temperature_icon_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/air_temperature_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="空气温度"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/air_temperature_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/air_temperature_icon_tv"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/air_humidity_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/air_humidity_icon"/>

                    <TextView
                        android:id="@+id/air_humidity_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/air_humidity_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="空气湿度"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/air_humidity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/air_humidity_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/light_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/light_icon"/>

                    <TextView
                        android:id="@+id/light_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/light_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="光照强度"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/light_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/light_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/soil_temperature_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/soil_temperature_icon"/>

                    <TextView
                        android:id="@+id/soil_temperature_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/soil_temperature_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="土壤温度"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/soil_temperature_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/soil_temperature_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/soil_humidity_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/soil_humidity_icon"/>

                    <TextView
                        android:id="@+id/soil_humidity_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/soil_humidity_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="土壤湿度"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/soil_humidity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/soil_humidity_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/co2_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/co2_icon"/>

                    <TextView
                        android:id="@+id/co2_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/co2_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="二氧化碳"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/co2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/co2_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/soilph_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/soilph_icon"/>

                    <TextView
                        android:id="@+id/soilph_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/soilph_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="土壤PH"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/soilph_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/soilph_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_weight="1" >

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text="检测设备每5分钟更新一次数据"
            android:textColor="#ffb4b4b4"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>
