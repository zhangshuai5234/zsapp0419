<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeef0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/actionbar_layout"/>
        <ListView
            android:id="@+id/chargelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:visibility="gone"
            ></ListView>
        <RelativeLayout
            android:id="@+id/mime_layout_01"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg2"
            android:clickable="true" >


            <ImageView
                android:id="@+id/userpic"
                android:layout_width="68dp"
                android:layout_height="68dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/personalicon"

                android:background="@color/white" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userpic"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="用户名"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/basicinfo_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:gravity="center"
                    android:text="基本信息"
                    android:textColor="@color/item_graytext"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/more" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray_line" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/eqiupment_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:gravity="center"
                    android:text="设备管理"
                    android:textColor="@color/item_graytext"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/more" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d8d8d8" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/aboutus_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/change_psw"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:gravity="center"
                    android:text="修改密码"
                    android:textColor="@color/item_graytext"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/more" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d8d8d8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:gravity="center"
                    android:text="功能"
                    android:textColor="@color/item_graytext"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/more" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d8d8d8" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/veision_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:gravity="center"
                    android:text="版本更新"
                    android:textColor="#3a3a3a"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="#ffff" />
                <ImageView
                    android:id="@+id/next_img"
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="#ffff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_toLeftOf="@+id/next_img"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="1.01"
                    android:textColor="#3a3a3a"
                    android:textSize="16dp" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d8d8d8" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logout_layout"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="27dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="退出"
                android:textColor="#3a3a3a"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
